<%= image_tag 'background-yellow-square.png', class: "banner-bg"  %>

<div class="container col-6 mt-5 mb-5">
  <div class="form-title">
    <h2 class="text-center">Log in</h2>
  </div>
    <div class="form-container m-5 pt-3">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs m-5">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

          <%= f.button :submit, "Log in",  class: "btn-gradient form-actions mx-5 my-3" %>
      <% end %>

      <div class="mt-3 pb-3">
        <%= render "devise/shared/links" %>
      </div>
    </div>
</div>
